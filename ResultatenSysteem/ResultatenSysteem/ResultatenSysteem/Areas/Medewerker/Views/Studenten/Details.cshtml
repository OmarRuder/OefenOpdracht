@model ResultatenSysteem.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Voornaam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voornaam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Achternaam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Achternaam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tussenvoegsel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tussenvoegsel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studentnummer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studentnummer)
        </dd>
        <dt class="col-sm-2">
            Groepen:
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in ViewBag.Groepen)
            {
             <p>@item</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
