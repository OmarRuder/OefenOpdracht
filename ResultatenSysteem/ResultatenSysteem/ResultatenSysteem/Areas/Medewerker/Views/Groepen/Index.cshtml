                @foreach (var vak in ViewBag.Vakken)
                {
                    @vak.Naam
                    @foreach (var vak2 in Model.Where(v => v.Id == vak.Id))
                    {

                                <dd style="color:red;">
                                    @vak2.Naam
                                    @Html.DisplayFor(modelItem => item.Vakken)
                                </dd>

                        }
                    }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Overzicht" asp-route-id="@item.Id">Overzicht</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

