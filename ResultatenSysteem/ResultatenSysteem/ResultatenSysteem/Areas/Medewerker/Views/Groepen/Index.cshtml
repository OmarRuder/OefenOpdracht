@model IEnumerable<ResultatenSysteem.Models.Groep>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Naam)</th>
            <th>@Html.DisplayNameFor(model => model.Groepscode)</th>
            <th>Vakken</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
