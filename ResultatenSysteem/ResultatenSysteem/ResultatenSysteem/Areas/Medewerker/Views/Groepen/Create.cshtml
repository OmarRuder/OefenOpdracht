@model ResultatenSysteem.Models.Groep

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Groep</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Groepscode" class="control-label"></label>
                <input asp-for="Groepscode" class="form-control" />
                <span asp-validation-for="Groepscode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @foreach (var item in ViewBag.Vakken)
            {
                <input type="checkbox" name="VakId" value="@item.Id" /> <span>@item.Naam (@item.Vakcode)</span> <br />
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
