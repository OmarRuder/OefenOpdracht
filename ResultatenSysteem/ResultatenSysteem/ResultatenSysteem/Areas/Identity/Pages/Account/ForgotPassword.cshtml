@page
@model ForgotPasswordModel
<link href="~/css/loginPage.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "";
}

<div class="container">
    <div class="loginCardContainer">
        <div class="loginCard">
            <section id="loginSection">
                <h1>Wachtwoord vergeten?</h1>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input placeholder="Voer je e-mail adres in." asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div>
                        <button class="oButton oPrimary w100" style="margin-top:2%;" type="submit">Stuur verificatie</button>
                        <button class="oButton oDelete w100" style="margin-top:2%;margin-bottom: 5%;" type="submit">Annuleren</button>
                    </div>
                    <div>
                        <p>
                            <a asp-page="./Login">Terug naar inloggen</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
