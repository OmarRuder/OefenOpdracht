@model string

@if (!String.IsNullOrEmpty(Model))
{
    <script>
        function dismissAlert() {
            console.log("clicked");
            $("#statusMessageModal").remove();
        }
    </script>
    <style>
        #statusMessageModal {
            top: 85px;
            right: 500px;
            position: absolute;
            margin: 0 auto;
        }
    </style>
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : "success";
    <div id="statusMessageModal">
        <div class="alert alert-@statusMessageClass alert-dismissible" role="alert">
            <button type="button" class="close" onclick="dismissAlert();" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @Model
        </div>
    </div>
    
}