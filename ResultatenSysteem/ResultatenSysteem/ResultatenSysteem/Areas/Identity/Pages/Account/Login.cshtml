@page
@model LoginModel
<link href="~/css/loginPage.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
@{
    ViewData["Title"] = "Inloggen";
    Layout = "";
}
<div class="container">
    <div class="loginCardContainer">
        <div class="loginCard">
            <section id="loginSection">
                <form id="account" method="post">
                    <h1>Inloggen</h1>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="formRow">
                        <input placeholder="E-Mail" asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="formRow">
                        <input placeholder="Wachtwoord" asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="formRow">
                        <div class="checkBoxRow">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button class="oButton oPrimary w100" style="margin-top:2%;" type="submit">Log in</button>
                        <button class="oButton oDelete w100" style="margin-top:2%;margin-bottom: 5%;" type="submit">Delete knop</button>
                        @*<button class="oButton oDelete">Test</button>*@
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Wachtwoord vergeten?</a>
                        </p>
                        <p>
                            <a href="../../Aanvragen/Create">Opleiding verzoek indienen</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


